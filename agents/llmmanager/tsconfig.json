{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "allowJs": true,
      "checkJs": false
    },
    "include": ["**/*.mjs", "**/*.ts", "**/*.js"],
    "exclude": ["node_modules"]
  }
