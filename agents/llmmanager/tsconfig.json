{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "allowJs": true,
      "checkJs": false,
      "outDir": "./dist",
      "rootDir": ".",
      "baseUrl": "."
    },
    "include": ["**/*.mjs", "**/*.ts", "**/*.js"],
    "exclude": ["node_modules", "dist"]
  }
